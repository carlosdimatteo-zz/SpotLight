extends layout

block content
    h1 #{title}
    form(method="post",action="/articles/edit/"+article._id)
        #form-group
            label Title:
            input.form-control(name="title", type="text",value=article.title)
        #form-group
            label Description:
            textarea.form-control(name="body")=article.body
        #form-group
            label Price:
            input.form-control(name="price", type="text",value=article.price)
        #form-group
            label Stock:
            input.form-control(name="stock", type="text",value=article.stock)
        br
        input.btn.btn-primary(type="submit",value="submit")
