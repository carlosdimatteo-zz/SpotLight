extends layout

block content
    h1= article.title
    h5 Sold by:  #{author}
    h5 Price: #{article.price} $
    h5 Stock: #{article.stock}
    p=article.body
    hr
    if user
      a.btn.btn-default(href="/users/cart/add/"+article._id) Add to cart
        if user._id.toString()==article.author.toString()
            a.btn.btn-default(href="/articles/edit/"+article._id) Edit
            a.btn.btn-danger.delete-article(href="#",data-id=article._id) Delete